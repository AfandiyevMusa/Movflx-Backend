@model Contact

@{
    ViewData["Title"] = "Contact Page";
}

<section class="breadcrumb-area breadcrumb-bg"
         data-background="assets/img/bg/breadcrumb_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2 class="title">Contact Us</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="~/index.html">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Contact
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-area contact-bg"
         data-background="assets/img/bg/contact_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="contact-form-wrap">
                    <div class="widget-title mb-50">
                        <h5 class="title">Contact Form</h5>
                    </div>
                    <div class="contact-form">
                        <form asp-action="CreateContact" method="post" id="contact-form">
                            <div class="row">
                                <input hidden asp-for="CreatorName" name="CreatorName" value="@User.Identity.Name" />
                                <div class="col-md-6">
                                    <label for="name">Name</label>
                                    <input asp-for="Name" name="name" id="name" type="text" placeholder="Your Name..." />
                                </div>
                                <div class="col-md-6">
                                    <label for="email">Email</label>
                                    <input asp-for="Email" name="email" id="email" type="email" placeholder="Your  Email *" />
                                </div>
                            </div>

                            <div>
                                <label for="email">Subject</label>
                                <input asp-for="Subject" name="subject" id="subject" type="text" placeholder="Subject *" />
                            </div>

                            <div>
                                <textarea asp-for="Message" id="message" name="message" rows="7" placeholder="Type Your Message..."></textarea>
                            </div>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <input type="submit" class="btn btn-lg btn-color btn-button" value="Send Message" id="submit-message">
                                <div id="msg" class="message"></div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="SignIn">
                                    <input class="btn btn-lg btn-color btn-button" value="Send Message" id="submit-message">
                                    <div id="msg" class="message"></div>
                                </a>

                            }

                            @*@if (User.Identity.IsAuthenticated)
        {
            <button type="submit" value="Send Message" id="submit-message" class="btn">Send Message</button>
        }
        else
        {
            <a asp-controller="Account" asp-action="SignIn">
                <button type="submit" value="Send Message" id="submit-message" class="btn">Send Message</button>
            </a>

        }*@
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5">
                <div class="widget-title mb-50">
                    <h5 class="title">Information</h5>
                </div>
                <div class="contact-info-wrap">
                    <p>
                        <span>Find solutions :</span> to common problems, or get help
                        from a support agent industry's standard .
                    </p>
                    <div class="contact-info-list">
                        <ul>
                            <li>
                                <div class="icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <p><span>Address :</span> W38 Park Road New York</p>
                            </li>
                            <li>
                                <div class="icon"><i class="fas fa-phone-alt"></i></div>
                                <p><span>Phone :</span> (09) 123 854 365</p>
                            </li>
                            <li>
                                <div class="icon"><i class="fas fa-envelope"></i></div>
                                <p>
                                    <span>Email :</span>
                                    <a href="~//cdn-cgi/l/email-protection"
                                       class="__cf_email__"
                                       data-cfemail="d2a1a7a2a2bda0a692bfbda4b4beaafcb1bdbf">[email&#160;protected]</a>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="map" style="width: 100%">
    <iframe width="100%"
            height="439"
            frameborder="0"
            scrolling="no"
            marginheight="0"
            marginwidth="0"
            src="https://maps.google.com/maps?width=100%25&amp;height=700&amp;hl=en&amp;q=Aff%20Business%20House+(My%20Business%20Name)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
    </iframe>
</div>

<section class="newsletter-area newsletter-bg"
         data-background="assets/img/bg/newsletter_bg.jpg">
    <div class="container">
        <div class="newsletter-inner-wrap">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="newsletter-content">
                        <h4>Trial Start First 30 Days.</h4>
                        <p>Enter your email to create or restart your membership.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <form action="#" class="newsletter-form">
                        <input type="email" required placeholder="Enter your email" />
