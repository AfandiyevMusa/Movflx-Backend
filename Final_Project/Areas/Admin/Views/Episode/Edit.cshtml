@model EpisodeEditVM
@{
    ViewData["Title"] = "Episode Episode";
}


<div class="container my-5">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger d-block"></span>
        </div>
        <div class="form-group mt-3">
            <lable>Film</lable>
            <select id="filmId" asp-for="FilmId" asp-items="ViewBag.films" class="animated-input">
                <option disabled selected>--Select Film--</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <lable>Season</lable>
            <select id="seasonId" asp-for="SeasonId" asp-items="ViewBag.seasons" class="animated-input"></select>
        </div>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

@section AdminScripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/admin/assets/js/episodeFilter.js"></script>
}

