@model SeasonEditVM
@{
    ViewData["Title"] = "Seasons";
}

<style>
    .images {
        position: relative;
        transition: all 0.5s;
    }

        .images button {
            position: absolute;
            left: 65px;
            top: 80px;
            opacity: 0;
        }

        .images:hover button {
            opacity: 1;
            cursor: pointer;
        }

        .images img {
            transition: all 0.5s;
        }

        .images:hover img {
            filter: brightness(50%);
            cursor: pointer;
        }
</style>


<div class="container my-5">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <input asp-for="Name" class="form-control" placeholder="Enter Name" />
            <span asp-validation-for="Name" class="text-danger d-block"></span>
        </div>
        <div class="form-group mt-3">
            <select asp-for="FilmId" class="form-control" asp-items="ViewBag.getFilms"></select>
        </div>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

@section AdminScripts{
    <script src="~/admin/assets/js/season.js"></script>
    <partial name="_ValidationScriptsPartial" />
}