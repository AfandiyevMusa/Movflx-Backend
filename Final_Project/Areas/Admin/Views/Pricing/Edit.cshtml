@model PricingEditVM
@{
    ViewData["Title"] = "Edit Pricing";
}


<div class="container my-5">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger d-block"></span>
        </div>
        <div class="form-group mt-3">
            <textarea asp-for="Price" class="form-control" placeholder="Price"></textarea>
            <span asp-validation-for="Price" class="text-danger d-block"></span>
        </div>
        <div class="form-group mt-3">
            <input asp-for="DatePlan" class="form-control" placeholder="DatePlan" />
            <span asp-validation-for="DatePlan" class="text-danger d-block"></span>
        </div>
        <div class="form-group mt-3">
            <input asp-for="MultiplyWatching" class="form-control" placeholder="Multiply Watching" />
            <span asp-validation-for="MultiplyWatching" class="text-danger d-block"></span>
        </div>
        <div class="form-group mt-3">
            <lable>Resolution</lable>
            <select asp-for="ResolutionId" asp-items="ViewBag.resolutions" class="animated-input"></select>
        </div>
        <div class="form-group mt-3">
            <lable>Video Quality</lable>
            <select asp-for="VideoQualityId" asp-items="ViewBag.videoqualities" class="animated-input"></select>
        </div>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

@section AdminScripts{
    <partial name="_ValidationScriptsPartial" />
}

