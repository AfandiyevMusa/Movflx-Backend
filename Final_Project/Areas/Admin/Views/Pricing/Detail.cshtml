@model PricingDetailVM

@{
    ViewData["Title"] = "Pricing Detail";
}


<style>
    .active-paginate {
        background-color: #0884ec !important;
        color: white !important;
    }
</style>

<div class="container my-3">
    <h2 class="text-center">Advertising</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Date Plan
                    </th>
                    <th>
                        Multiplay Watching
                    </th>
                    <th>
                        Video Quality
                    </th>
                    <th>
                        Resolution
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="parent">
                    <td>
                        @Model.Name
                    </td>
                    <td>
                        @Model.Price
                    </td>
                    <td>
                        @Model.DatePlan
                    </td>
                    <td>
                        @Model.MultiplyWatching
                    </td>
                    <td>
                        @Model.VideoQuality
                    </td>
                    <td>
                        @Model.Resolution
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
