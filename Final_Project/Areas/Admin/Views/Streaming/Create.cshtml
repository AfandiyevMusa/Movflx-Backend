@model StreamingCreateVM

<div class="container my-5">
    <div class="row">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <input type="text" asp-for=Title class="form-control mt-3" placeholder="Enter Title" />
            <span class="text-danger d-block" asp-validation-for=Title></span>

            <input type="text" asp-for=Description class="form-control mt-3" placeholder="Enter Description" />
            <span class="text-danger d-block" asp-validation-for=Description></span>

            <input type="text" asp-for=Resolution class="form-control mt-3" placeholder="Enter Resolution Size" />
            <span class="text-danger d-block" asp-validation-for=Resolution></span>

            <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3 d-inline-block">Submit</button>
            <a asp-controller="Streaming" asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3 d-inline-block">Back</a>
        </form>
    </div>
</div>