@model List<StreamingVM>
@{
    ViewData["Title"] = "Streaming";
}

<div class="container my-3">
    <h2 class="text-center">Streaming</h2>
    <div class="create-btn">
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Resolution
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var streaming in Model)
                {
                    <tr class="parent">
                        <td>
                            @streaming.Title
                        </td>
                        <td>
                            @streaming.Description
                        </td>
                        <td>
                            @streaming.Resolution
                        </td>
                        <td>
                            @streaming.CreateDate
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@streaming.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-action="Edit" asp-route-id="@streaming.Id" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <button type="submit" data-id="@streaming.Id" id="delete" class="btn btn-danger btn-rounded btn-fw">Delete</button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@section AdminScripts{
    <script src="~/admin/assets/js/streaming.js"></script>
}